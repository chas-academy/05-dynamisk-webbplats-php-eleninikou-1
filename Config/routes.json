
{
  "": {
    "controller": "Default",
    "method": "start"
  },
  
  "posts": {
    "controller": "Post",
    "method": "getAll"
  },

  "posts/:page": {
    "controller": "Post",
    "method": "getAllWithPageNumber",
    "params": {
      "page": "number"
    }
  },

  "posts/save" : {
    "controller": "Post",
    "method": "saveNewPost"
  },

  "post/:id/update": {
    "controller": "Post",
    "method": "getToUpdate",
      "params": {
      "id": "number"
    }
  },


  ":id/updated": {
    "controller": "Post",
    "method": "updatePost",
    "params": {
      "id": "number"
    }
  },

  "post/:id/delete": {
    "controller": "Post",
    "method": "delete",
      "params": {
      "id": "number"
    }
  },

  "login": {
    "controller": "User",
    "method": "login"
   },

  "posts/category/:id": {
      "controller": "Post",
      "method": "getPostsByCategory",
      "params": {
        "id": "number"
      }
   },  

  "posts/tags/:id": {
    "controller": "Post",
    "method": "getPostsByTag",
    "params": {
      "id": "number"
    }
  }
}


