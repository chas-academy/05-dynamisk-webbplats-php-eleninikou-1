
{
  "start": {
    "controller": "Default",
    "method": "start"
  },

  "posts": {
    "controller": "Post",
    "method": "getAll"
  },

  "posts/:page": {
    "controller": "Posts",
    "method": "getAllWithPageNumber",
    "params": {
      "page": "number"
    }
  },

  "login": {
    "controller": "User",
    "method": "login",
  },

  "categories/": {
    "controller": "Post",     // <--- Controller som körs
    "method": "getCategories", // <--- Vilken metod i controllern
  },

  "posts/category/:id": {
      "controller": "Post",
      "method": "getByCategory", // <--- Denna metod tar emot en int $categoryId (eller vad du nu väljer att kalla den)
      "params": {
        "id": "number"
      }
  }


}


