
{
  "": {
    "controller": "Default",
    "method": "start"
  },
  
  "posts": {
    "controller": "Post",
    "method": "getAll"
  },

  "posts/:page": {
    "controller": "Post",
    "method": "getAllWithPageNumber",
    "params": {
      "page": "number"
    }
  },

  "posts/save" : {
    "controller": "Post",
    "method": "saveNewPost"
  },

  "admin": {
    "controller": "User",
    "method": "login"
   },

  "posts/category/:id": {
      "controller": "Post",
      "method": "getPostsByCategory",
      "params": {
        "id": "number"
      }
   },  
     
  "posts/tags/:id": {
    "controller": "Post",
    "method": "getByTag",
    "params": {
      "id": "number"
    }
  }
}


